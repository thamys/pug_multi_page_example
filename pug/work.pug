extends _layouts/layout
block content
	include _blocks/slider
	+slider("Our Awesome Projects", "Designed with <i class='icon-heart'></i> by the fine folks at <a href='http://freehtml5.co' target='_blank'>FreeHTML5.co</a>", "slide_3.jpg")
	#fh5co-work-section.fh5co-light-grey-section
		.container
			.row
				mixin animate-box(image, title, category)
					.col-md-4.animate-box
						a.item-grid.text-center(href='#')
							.image(style='background-image: url(images/'+ image +')')
							.v-align
								.v-align-middle
									h3.title= title
									h5.category= category
				+animate-box('image_1.jpg', 'Geographical App', 'Web Application')
				+animate-box('image_2.jpg', 'Geographical App', 'User Interface')
				+animate-box('image_3.jpg', 'Geographical App', 'Branded')
				+animate-box('image_4.jpg', 'Geographical App', 'Web')
				+animate-box('image_5.jpg', 'Geographical App', 'Illustration')
				+animate-box('image_6.jpg', 'Geographical App', 'Web Application')
				+animate-box('image_7.jpg', 'Geographical App', 'Web Application')
				+animate-box('image_8.jpg', 'Geographical App', 'Web Application')
				+animate-box('image_9.jpg', 'Geographical App', 'Web Application')

	include _blocks/before_footer
block theme-js
		// jQuery
		script(src='js/jquery.min.js')
		// jQuery Easing
		script(src='js/jquery.easing.1.3.js')
		// Bootstrap
		script(src='js/bootstrap.min.js')
		// Waypoints
		script(src='js/jquery.waypoints.min.js')
		// Flexslider
		script(src='js/jquery.flexslider-min.js')
		// Stellar
		script(src='js/jquery.stellar.min.js')
		// MAIN JS
		script(src='js/main.js')
