extends _layouts/layout

block content
	include _blocks/slider
	+slider("Get in touch. Don't be shy.", "Designed with <i class='icon-heart'></i> by the fine folks at <a href='http://freehtml5.co' target='_blank'>FreeHTML5.co</a>", "slide_2.jpg")
	.fh5co-contact.animate-box
		.container
			.row
				.col-md-8.col-md-offset-2.col-md-push-2.animate-box
					h2 Contact Details
					p
						| Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove. Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove.
					br
					br
				.col-md-3
					h3 Contact Info.
					ul.contact-info
						li
							i.icon-map
							| 198 West 21th Street, Suite 721 New York NY 10016
						li
							i.icon-phone
							| + 1235 2355 98
						li
							i.icon-envelope
							a(href='#') info@yoursite.com
						li
							i.icon-globe
							a(href='#') www.yoursite.com
				.col-md-8.col-md-push-1.col-sm-12.col-sm-push-0.col-xs-12.col-xs-push-0
					.row
						.col-md-6
							.form-group
								input.form-control(placeholder='Name', type='text')
						.col-md-6
							.form-group
								input.form-control(placeholder='Email', type='text')
						.col-md-12
							.form-group
								textarea.form-control(name='', id='', cols='30', rows='7', placeholder='Message')
						.col-md-12
							.form-group
								input.btn.btn-primary(value='Send Message', type='submit')
	#map.animate-box(data-animate-effect='fadeIn')
block theme-js
	// jQuery
	script(src='js/jquery.min.js')
	// jQuery Easing
	script(src='js/jquery.easing.1.3.js')
	// Bootstrap
	script(src='js/bootstrap.min.js')
	// Waypoints
	script(src='js/jquery.waypoints.min.js')
	// Flexslider
	script(src='js/jquery.flexslider-min.js')
	// Google Map
	script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCefOgb1ZWqYtj7raVSmN4PL2WkTrc-KyA&sensor=false')
	script(src='js/google_map.js')
	// MAIN JS
	script(src='js/main.js')
