	script(src='js/jquery.easing.1.3.js')
	// Bootstrap
	script(src='js/bootstrap.min.js')
	// Waypoints
	script(src='js/jquery.waypoints.min.js')
	// Flexslider
	script(src='js/jquery.flexslider-min.js')
	// Stellar
	script(src='js/jquery.stellar.min.js')
	// MAIN JS
	script(src='js/main.js')
